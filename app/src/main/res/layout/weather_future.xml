<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/future_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_data"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_data"
            android:text="2016-06-09"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/item_date"
            android:text="小雨，最高是静静的发呆和罚款的话费水水水水水水水水电话费"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="17-26"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>